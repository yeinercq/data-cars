<div class="container">
  <div class="mt-2 import-form">
    <h2>Import car data</h2>
    <%= form_with url: import_cars_path, method: :post, class: "form-control shadow-sm" do |f| %>
      <%= f.file_field :file, class: "form-control", accept: ".csv" %>
      <%= f.button "Import", class: "btn btn-primary mt-2" %>
    <% end %>
    We have <strong><%= @cars.count %></strong> records in database.
  </div>
</div>